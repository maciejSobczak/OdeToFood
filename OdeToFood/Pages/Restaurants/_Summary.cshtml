@using OdeToFood.Core
@model Restaurant

<div class="card">
    <h5 class="card-header">@Model.Name</h5>
    <div class="card-body">
        <div class="card-text">
            <p>Location: @Model.Location</p>
            <p>Cuisine: @Model.Cuisine</p>
        </div>
        <div>
            <a class="btn btn-secondary" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-search"></i>
            </a>
            <a class="btn btn-secondary" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-secondary" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-trash"></i>
            </a>
        </div>
    </div>
</div>